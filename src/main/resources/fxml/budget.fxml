<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.walletpal.BudgetController">

    <Label alignment="BOTTOM_CENTER" prefHeight="50.0" prefWidth="175.0" style="-fx-font-size: 28px; -fx-font-weight: bold;" text="WalletPal">
        <VBox.margin>
            <Insets bottom="-20.0" />
        </VBox.margin>
    </Label>
    <Label alignment="TOP_CENTER" prefHeight="30.0" prefWidth="175.0" text="Personal finance, simplified">
      <font>
         <Font name="System Bold Italic" size="10.0" />
      </font></Label>

    <TabPane fx:id="mainTabPane" prefHeight="500.0" prefWidth="700">

        <Tab fx:id="incomeTab" closable="false" text="Income">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="incomeSourceField" promptText="Source">
                        <HBox.margin>
                            <Insets left="20.0" top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="incomeAmountField" promptText="Amount">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="incomeNotesField" prefWidth="150.0" promptText="Notes">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <Button fx:id="addIncomeButton" text="Add">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </Button>
                </HBox>
                <TableView fx:id="incomeTable" prefHeight="400.0" prefWidth="700.0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="incomeSourceCol" prefWidth="235.0" text="Source" />
                        <TableColumn fx:id="incomeAmountCol" prefWidth="233.0" text="Amount" />
                        <TableColumn fx:id="incomeNotesCol" prefWidth="234.0" text="Notes" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </TableView>
            </VBox>
        </Tab>

        <Tab fx:id="expenseTab" closable="false" disable="true" text="Expense">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="expenseCategoryField" promptText="Category">
                        <HBox.margin>
                            <Insets left="20.0" top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="expenseLimitField" promptText="Amount">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="expenseNotesField" prefWidth="150" promptText="Notes">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <Button fx:id="addExpenseButton" disable="true" text="Add">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </Button>
                </HBox>
                <TableView fx:id="expenseTable" prefHeight="400.0" prefWidth="700.0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="expenseCategoryCol" prefWidth="140.0" text="Category" />
                        <TableColumn fx:id="expenseLimitCol" prefWidth="140.0" text="Amount" />
                        <TableColumn fx:id="expenseSpentCol" prefWidth="140.0" text="Spent" />
                        <TableColumn fx:id="expenseRemainingCol" prefWidth="140.0" text="Remaining" />
                        <TableColumn fx:id="expenseNotesCol" prefWidth="140.0" text="Notes" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </TableView>
            </VBox>
        </Tab>

        <Tab fx:id="savingsTab" closable="false" disable="true" text="Savings">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="savingsCategoryField" promptText="Category">
                        <HBox.margin>
                            <Insets left="20.0" top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="savingsGoalField" promptText="Amount">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="savingsNotesField" prefWidth="150" promptText="Notes">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <Button fx:id="addSavingsButton" disable="true" text="Add">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </Button>
                </HBox>
                <TableView fx:id="savingsTable" prefHeight="400.0" prefWidth="700.0">
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                    <columns>
                        <TableColumn fx:id="savingsCategoryCol" prefWidth="140.0" text="Category" />
                        <TableColumn fx:id="savingsGoalCol" prefWidth="140.0" text="Amount" />
                        <TableColumn fx:id="savingsSavedCol" prefWidth="140.0" text="Saved" />
                        <TableColumn fx:id="savingsMoreToGoCol" prefWidth="140.0" text="More to Go" />
                        <TableColumn fx:id="savingsNotesCol" prefWidth="140.0" text="Notes" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </TableView>
            </VBox>
        </Tab>
        <VBox.margin>
            <Insets left="10.0" right="10.0" />
        </VBox.margin>
    </TabPane>

    <HBox alignment="BOTTOM_RIGHT" spacing="10">
        <Button fx:id="summaryButton" disable="true" onAction="#showSummary" text="View Summary">
            <HBox.margin>
                <Insets bottom="10.0" right="20.0" />
            </HBox.margin>
        </Button>
      <VBox.margin>
         <Insets bottom="10.0" left="10.0" right="10.0" />
      </VBox.margin>
    </HBox>

</VBox>
