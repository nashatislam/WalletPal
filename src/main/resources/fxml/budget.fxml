<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.walletpal.BudgetController" stylesheets="@../css/style.css">

       <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="ðŸŸ¦WalletPalðŸŸ¦">
      <font>
         <Font name="System Bold" size="54.0" />
      </font></Label>

    <HBox alignment="TOP_RIGHT" spacing="10" />
    <TabPane prefHeight="500" prefWidth="700">

        <Tab closable="false" text="Income">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="incomeSourceField" promptText="Source">
                  <HBox.margin>
                     <Insets left="20.0" />
                  </HBox.margin></TextField>
                    <TextField fx:id="incomeAmountField" promptText="Amount" />
                    <Button fx:id="addIncomeButton" text="Add" />
               <VBox.margin>
                  <Insets top="12.0" />
               </VBox.margin>
                </HBox>
                <TableView fx:id="incomeTable" prefHeight="442.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="incomeSourceCol" prefWidth="330.0" text="Source" />
                        <TableColumn fx:id="incomeAmountCol" prefWidth="330.0" text="Amount" />
                    </columns>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
                </TableView>
            </VBox>
        </Tab>

        <Tab closable="false" text="Expense">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="expenseCategoryField" promptText="Category">
                        <HBox.margin>
                            <Insets left="20.0" top="12.0" />
                        </HBox.margin></TextField>
                    <TextField fx:id="expenseLimitField" promptText="Amount">
                  <HBox.margin>
                     <Insets top="12.0" />
                  </HBox.margin></TextField>
                    <Button fx:id="addExpenseButton" text="Add">
                  <HBox.margin>
                     <Insets top="12.0" />
                  </HBox.margin></Button>
                </HBox>
                <TableView fx:id="expenseTable" prefHeight="442.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="expenseCategoryCol" prefWidth="165.0" text="Category" />
                        <TableColumn fx:id="expenseLimitCol" prefWidth="165.0" text="Amount" />
                  <TableColumn fx:id="expenseSpentCol" prefWidth="165.0" text="Spent" />
                  <TableColumn fx:id="expenseRemainingCol" prefWidth="165.0" text="Remaining" />
                    </columns>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
                </TableView>
            </VBox>
        </Tab>

        <Tab closable="false" text="Savings">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="savingsCategoryField" promptText="Category">
                  <HBox.margin>
                     <Insets left="20.0" top="12.0" />
                  </HBox.margin></TextField>
                    <TextField fx:id="savingsGoalField" promptText="Amount">
                  <HBox.margin>
                     <Insets top="12.0" />
                  </HBox.margin></TextField>
                    <Button fx:id="addSavingsButton" text="Add">
                  <HBox.margin>
                     <Insets top="12.0" />
                  </HBox.margin></Button>
                </HBox>
                <TableView fx:id="savingsTable" prefHeight="442.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="savingsCategoryCol" prefWidth="165.0" text="Category" />
                        <TableColumn fx:id="savingsGoalCol" prefWidth="165.0" text="Amount" />
                  <TableColumn fx:id="savingsSavedCol" prefWidth="165.0" text="Saved" />
                  <TableColumn fx:id="savingsMoreToGoCol" prefWidth="165.0" text="More to Go" />
                    </columns>
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" />
               </VBox.margin>
                </TableView>
            </VBox>
        </Tab>
      <VBox.margin>
         <Insets />
      </VBox.margin>

    </TabPane>

</VBox>
