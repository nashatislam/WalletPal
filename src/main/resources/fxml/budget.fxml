<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="app.walletpal.BudgetController" stylesheets="@../css/style.css">

    <Label style="-fx-font-size: 28px; -fx-font-weight: bold;" text="ðŸŸ¦WalletPalðŸŸ¦">
        <font>
            <Font name="System Bold" size="54.0" />
        </font>
    </Label>

    <TabPane prefHeight="500" prefWidth="700" fx:id="mainTabPane">

        <Tab closable="false" text="Income" fx:id="incomeTab">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="incomeSourceField" promptText="Source">
                        <HBox.margin>
                            <Insets left="20.0" top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="incomeAmountField" promptText="Amount">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="incomeNotesField" promptText="Notes" prefWidth="150">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <Button fx:id="addIncomeButton" text="Add">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </Button>
                </HBox>
                <TableView fx:id="incomeTable" prefHeight="400.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="incomeSourceCol" prefWidth="200.0" text="Source" />
                        <TableColumn fx:id="incomeAmountCol" prefWidth="150.0" text="Amount" />
                        <TableColumn fx:id="incomeNotesCol" prefWidth="250.0" text="Notes" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </TableView>
            </VBox>
        </Tab>

        <Tab closable="false" text="Expense" fx:id="expenseTab" disable="true">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="expenseCategoryField" promptText="Category">
                        <HBox.margin>
                            <Insets left="20.0" top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="expenseLimitField" promptText="Amount">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="expenseNotesField" promptText="Notes" prefWidth="150">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <Button fx:id="addExpenseButton" text="Add" disable="true">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </Button>
                </HBox>
                <TableView fx:id="expenseTable" prefHeight="400.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="expenseCategoryCol" prefWidth="140.0" text="Category" />
                        <TableColumn fx:id="expenseLimitCol" prefWidth="120.0" text="Amount" />
                        <TableColumn fx:id="expenseSpentCol" prefWidth="120.0" text="Spent" />
                        <TableColumn fx:id="expenseRemainingCol" prefWidth="120.0" text="Remaining" />
                        <TableColumn fx:id="expenseNotesCol" prefWidth="200.0" text="Notes" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </TableView>
            </VBox>
        </Tab>

        <Tab closable="false" text="Savings" fx:id="savingsTab" disable="true">
            <VBox spacing="10">
                <HBox spacing="10">
                    <TextField fx:id="savingsCategoryField" promptText="Category">
                        <HBox.margin>
                            <Insets left="20.0" top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="savingsGoalField" promptText="Amount">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <TextField fx:id="savingsNotesField" promptText="Notes" prefWidth="150">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </TextField>
                    <Button fx:id="addSavingsButton" text="Add" disable="true">
                        <HBox.margin>
                            <Insets top="12.0" />
                        </HBox.margin>
                    </Button>
                </HBox>
                <TableView fx:id="savingsTable" prefHeight="400.0" prefWidth="700.0">
                    <columns>
                        <TableColumn fx:id="savingsCategoryCol" prefWidth="140.0" text="Category" />
                        <TableColumn fx:id="savingsGoalCol" prefWidth="120.0" text="Amount" />
                        <TableColumn fx:id="savingsSavedCol" prefWidth="120.0" text="Saved" />
                        <TableColumn fx:id="savingsMoreToGoCol" prefWidth="120.0" text="More to Go" />
                        <TableColumn fx:id="savingsNotesCol" prefWidth="200.0" text="Notes" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </TableView>
            </VBox>
        </Tab>
    </TabPane>

    <HBox alignment="BOTTOM_RIGHT" spacing="10">
        <Button fx:id="summaryButton" text="View Summary" disable="true" onAction="#showSummary">
            <HBox.margin>
                <Insets right="20.0" bottom="10.0" />
            </HBox.margin>
        </Button>
    </HBox>

</VBox>